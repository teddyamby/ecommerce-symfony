<header class="site-header">
    <div class="header-container">
        <div class="logo">
            <a href="{{ path('app_home') }}">E-Commerce</a>
        </div>
        
        {% include '_partials/_search_bar.html.twig' %}
        
        <nav class="main-nav">
            <ul>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_product_index') }}">Products</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('app_cart_index') }}">Cart</a></li>
                    <li><a href="{{ path('app_account') }}">My Account</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_admin') }}">Admin</a></li>
                    {% endif %}
                    <li><a href="{{ path('app_logout') }}">Logout</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Login</a></li>
                    <li><a href="{{ path('app_register') }}">Register</a></li>
                {% endif %}
            </ul>
        </nav>
        
        <div class="mobile-menu-toggle">
            <i class="fas fa-bars"></i>
        </div>
    </div>
</header>